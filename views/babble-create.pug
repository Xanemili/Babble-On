doctype html
include mix-in.pug

html(lang="en")
  head
      link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Cabin")
      link(rel="stylesheet", href="/styles/babble-create-styles.css")
      title Babble
  body
  //- +validationErrorSummery(errors


  div.create-babble-form
    form(class = "create-babble-form" action='/api/babbles' method="post")
      .create-babble-form__title
        +field( null, "title", null, null, "Title")
      .create-babble-form__subheader
        +field(null, "subHeader", null, null, "Subheader")
      .create-babble-form__reading-time
        +field(null, "readTime", "number", null, "reading time")
      .create-babble-form__topic
        +field(null, "topic", null, null, "topic")
        select()
      .create-babble-form__content
        +field(null, "content", null, null, `Babble-on \n here to your \n heart's content...`)
      .create-babble-form__url
        +field(null, "url", "url", null, "insert url of your image here")
      div.btn-container
          button(class = "publish-btn" type = "submit") Publish
