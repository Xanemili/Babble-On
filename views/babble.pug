doctype html
include mix-in.pug
html(lang="en")
  head
      title
      link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Cabin")
      link(rel="stylesheet", href="/styles/babble-styles.css")

  body
  include navbar-grey-logged.pug


block content
  .errors-container
  .babble-container
    .babble-header
      h1(id="babble-header")
      h2(id="babble-subheader")
    .babble-user
      #babble-user
      #babble-user-fullname
        //- button(class = "follow-btn" type = "button") Follow
    .babble-info
      span(id="babble-date")
      span(id="babble-read-time")
      span(id="babble-topic")
    .babble-image
      img(id="babble-image")
    .babble-content
      p()

    .babble-comments-container
      .babble-comments-header Comments
        .comments-button
          button(id='comment-add') Comment
      .babble-comments
        form(class='babble-new-comment hidden')
          .new-comment New Comment
          textarea#new-comment(name="newComment" rows="4")
          button#comment-add(type="submit") Add Comment

  script(src='../js/babble-view.js')
