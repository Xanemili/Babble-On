doctype html
include mix-in.pug
html(lang="en")
    head
        link(rel="stylesheet", href="/styles/sign-form-styles.css")
        title Babble-On
    body
    //- +validationErrorSummery(errors)
    div.sign-up-form-container
        img(class = 'log-in-logo' src="/resources/sign-up-mega.png", alt="babble-on sign up logo")
        p Please fill out the following fields to create your account.
        form(class = "sign-up-form" action='/api/user' method="post")
            //- input(type="hidden" name='_csrf' value=csrfToken)
            //- +field("First Name", "firstName", user.firstName)
            //- +field("Last Name", "lastName", user.lastName)
            //- +field("Email", "email", user.email, "email")
            //- +field("Password", "password", user.password, "password")
            +field("First Name", "firstName", null)
            +field("Last Name", "lastName", null)
            +field("Email", "email", null, "email")
            +field("Password", "password",null, "password")
            +field("Confirm Password", "confirmPassword", "", "password")
            div.btn-container
                button(class = "sign-up-btn" type = "submit") Sign Up
            div.redirect
                a(href='/users/log-in') Already have an account? Log in here.
